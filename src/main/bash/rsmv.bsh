#!/bin/bash -e

if [[ $# -lt 2 ]]
then
	echo " "
	echo "$0: Illegal arguments."
	echo " "
	echo "Syntax:"
	echo "$0 sourcepath destinationpath"
	exit 1
fi

if [ ! -d "$1" ]
then
  echo "$0: Not a directory: $1"
  exit 1
fi

for FILE in $1/*; do
    DESTFILE=$2/$(basename "$FILE")
    rscp $FILE $DESTFILE
    rm -rf $FILE
done
